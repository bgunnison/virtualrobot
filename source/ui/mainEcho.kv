#:kivy 1.0.9


<RootWidget>:
    canvas.before:
        Color:
            rgba: 0.5, 0.5, 0.5, 1
        Rectangle:
            pos: self.pos
            size: self.size

<TitleBoxLayout>:
    orientation: 'vertical' 
	height: 60
	
	canvas.before:
		Color:
			rgb: 1,0,0
		Rectangle:
            pos: self.pos
            size: self.size


    Label:
        text: 'VIRTUAL ROBOT - MIDI ECHO'
		height: 50
		font_size: 40
		canvas.before:
			Color:
				rgb: 1,0,0
		

<LogoZipped>
    
    size: (800/4,600/4) #imag.size
    size_hint: None, None
	pos_hint: {'center_x':.5, 'center_y':.5}
    Image:
        id: imag
        source: 'media/logo.zip'
        anim_delay: 0.2
        

